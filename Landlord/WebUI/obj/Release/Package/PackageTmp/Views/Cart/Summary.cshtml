@model Domain.Entities.Cart


<div class="navbar-text navbar-right">
    @*<b class="hidden-xs">Просмотреть</b>*@
    @Model.Lines.Count()
    ед. на сумму
    @Model.CalculateTotalSum().ToString("#.## грн.")

</div>

<div class="navbar-right hidden-xs">
    @Html.ActionLink(
        " ",
        "Index",
        "Cart",
        new { returnUrl = Request.Url.PathAndQuery },
        new { @class = "btn btn-default navbar-btn glyphicon glyphicon-shopping-cart" }
        
