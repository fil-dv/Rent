@model WebUI.Models.CustomModels.CartViewModel

@{
    ViewBag.Title = "ILandLord: список Ваших интересов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<table id="cartTable" class="table">
    <thead>
        <tr>
            <th>Адрес</th>
            <th class="text-right">Цена</th>
            <th class="text-right">Итого</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Cart.Lines)
        {
            <tr>
                <td class="text-left">@line.Area.RentAreaAddressRegion обл., @line.Area.RentAreaAddressCity, @line.Area.RentAreaAddressStreet</td>
                <td class="text-right">@line.Area.MonthPrice грн/мес.</td>
                
                <td>
                    @using (@Html.BeginForm("RemoveFromCart", "Cart"))
                    {
                        @Html.Hidden("areaID", line.Area.AreaID)
                        @Html.HiddenFor(x => x.ReturnUrl)
                        <input class="btn btn-sm btn-warning" type="submit" value="Удалить" />
                    }
                </td>

            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Итого: </td>
            <td class="text-right">@Model.Cart.CalculateTotalSum().ToString() грн/мес.</td>
        </tr>
    </tfoot>

</table>

<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Продолжить покупки</a>
    @Html.ActionLink("Оформить заказ", "CheckOut", null, new { @class = "btn btn-primary" })
</div>

